<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="eo_airbrake.configuration_class">Eo\AirbrakeBundle\Airbrake\Configuration</parameter>
        <parameter key="eo_airbrake.client_class">Eo\AirbrakeBundle\Airbrake\Client</parameter>
    </parameters>

    <services>
        <service id="eo_airbrake.configuration" class="%eo_airbrake.configuration_class%">
            <argument type="service" id="service_container"/>
        </service>
        <service id="eo_airbrake.client" class="%eo_airbrake.client_class%">
            <argument type="service" id="eo_airbrake.configuration"/>
        </service>
    </services>
</container>
