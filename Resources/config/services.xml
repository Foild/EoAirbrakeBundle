<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="eo_airbrake.configuration.class">Eo\AirbrakeBundle\Bridge\Configuration</parameter>
        <parameter key="eo_airbrake.client.class">Eo\AirbrakeBundle\Bridge\Client</parameter>
        <parameter key="eo_airbrake.exception_listener.class">Eo\AirbrakeBundle\EventListener\ExceptionListener</parameter>
        <parameter key="eo_airbrake.shutdown_listener.class">Eo\AirbrakeBundle\EventListener\ShutdownListener</parameter>
    </parameters>

    <services>
        <!-- Airbreak Configuration -->
        <service id="eo_airbrake.configuration" class="%eo_airbrake.configuration.class%">
            <argument type="service" id="service_container"/>
        </service>
        <!-- Airbreak Client -->
        <service id="eo_airbrake.client" class="%eo_airbrake.client.class%">
            <argument type="service" id="eo_airbrake.configuration"/>
        </service>
        <!-- Exception Listener -->
        <service id="php_airbrake.exception_listener" class="%eo_airbrake.exception_listener.class%">
            <tag name="kernel.event_listener" event="kernel.exception" method="onKernelException" />
            <argument type="service" id="eo_airbrake.client" />
        </service>
        <!-- PHP Shutdown Listener -->
        <service id="php_airbrake.shutdown_listener" class="%eo_airbrake.shutdown_listener.class%">
            <tag name="kernel.event_listener" event="kernel.controller" method="register" />
            <argument type="service" id="eo_airbrake.client" />
        </service>
    </services>
</container>
